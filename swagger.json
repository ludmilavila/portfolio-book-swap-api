{
  "openapi": "3.0.0",
  "info": {
    "title": "Book Swap API",
    "version": "1.0.0",
    "description": "API para troca de livros entre usuários."
  },
  "servers": [
    {
      "url": "http://localhost:7000"
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Login"],
        "summary": "Login do usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "senha": { "type": "string" }
                },
                "required": ["email", "senha"]
              }
            }
          }
        },
        "responses": {
          "200": { 
            "description": "Token gerado com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string" }
                  }
                },
                "example": {
                  "token": "string"
                }
              }
            } 
          },
          "401": { "description": "Credenciais inválidas." },
          "405": { "description": "Método não permitido." }
        }
      }
    },
    "/usuarios": {
      "post": {
        "tags": ["Usuários"],
        "summary": "Cadastro de usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": { "type": "string" },
                  "email": { "type": "string" },
                  "senha": { "type": "string" }
                },
                "required": ["nome", "email", "senha"]
              }
            }
          }
        },
        "responses": {
          "201": { 
            "description": "Usuário cadastrado com sucesso.", 
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                },
                "example": {
                  "message": "string"
                }
              }
            }
          },
          "400": { "description": "Dados inválidos ou e-mail já cadastrado." },
          "405": { "description": "Método não permitido." }
        }
      }
    },
    "/livros": {
      "post": {
        "tags": ["Livros"],
        "summary": "Cadastro de livro",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "titulo": { "type": "string" },
                  "autor": { "type": "string" },
                  "descricao": { "type": "string" }
                },
                "required": ["titulo", "autor", "descricao"]
              }
            }
          }
        },
        "responses": {
          "201": { 
            "description": "Livro cadastrado com sucesso." ,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                },
                "example": {
                  "message": "string"
                }
              }
            }
          },
          "400": { "description": "Dados inválidos." },
          "401": { "description": "Autenticação necessária ou inválida." },
          "405": { "description": "Método não permitido." }
        }
      },
      "get": {
        "tags": ["Livros"],
        "summary": "Listar meus livros",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { 
            "description": "Lista de livros do usuário.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "titulo": { "type": "string" },
                      "autor": { "type": "string" },
                      "descricao": { "type": "string" },
                      "usuarioId": { "type": "string" }
                    }
                  }
                },
                "example": [
                  {
                    "id": "string",
                    "titulo": "string",
                    "autor": "string",
                    "descricao": "string",
                    "usuarioId": "string"
                  }
                ]
              }
            }
          },
          "401": { "description": "Autenticação necessária ou inválida." },
          "405": { "description": "Método não permitido." }
        }
      }
    },
    "/interesses": {
      "post": {
        "tags": ["Interesses"],
        "summary": "Cadastrar interesse em livro",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "livroId": { "type": "string" }
                },
                "required": ["livroId"]
              }
            }
          }
        },
        "responses": {
          "201": { 
              "description": "Interesse cadastrado com sucesso.", 
              "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                },
                "example": {
                  "message": "string"
                }
              }
            }
          },
          "400": { "description": "Interesse já cadastrado ou inválido." },
          "401": { "description": "Autenticação necessária ou inválida." },
          "405": { "description": "Método não permitido." }
        }
      },
      "get": {
        "tags": ["Interesses"],
        "summary": "Listar meus interesses",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { 
            "description": "Lista de interesses do usuário.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "livroId": { "type": "string" },
                      "usuarioId": { "type": "string" }
                    }
                  }
                },
                "example": [
                  {
                    "id": "string",
                    "livroId": "string",
                    "usuarioId": "string"
                  }
                ]
              }
            }  
          },
          "401": { "description": "Autenticação necessária ou inválida." },
          "405": { "description": "Método não permitido." }
        }
      }
    },
    "/matches": {
      "post": {
        "tags": ["Matches"],
        "summary": "Criar match",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "interesseId": { "type": "string" }
                },
                "required": ["interesseId"]
              }
            }
          }
        },
        "responses": {
          "201": { 
            "description": "Match criado com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "match": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string" },
                        "livroId": { "type": "string" },
                        "donoId": { "type": "string" },
                        "interessadoId": { "type": "string" },
                        "status": { "type": "string" }
                      }
                    }
                  }
                },
                "example": {
                  "message": "string",
                  "match": {
                    "id": "string",
                    "livroId": "string",
                    "donoId": "string",
                    "interessadoId": "string",
                    "status": "string"
                  }
                }
              }
            }
          },
          "400": { "description": "Match já existente ou dados inválidos." },
          "401": { "description": "Autenticação necessária ou inválida." },
          "405": { "description": "Método não permitido." }
        }
      }
    },
    "/matches/{id}/resposta": {
      "post": {
        "tags": ["Matches"],
        "summary": "Aceitar ou recusar troca",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": { "type": "string", "enum": ["aceito", "recusado"] }
                },
                "required": ["status"]
              }
            }
          }
        },
        "responses": {
          "200": { 
            "description": "Match aceito ou recusado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                },
                "example": {
                  "message": "string"
                }
              }
            }              
          },
          "400": { "description": "Status inválido." },
          "401": { "description": "Autenticação necessária ou inválida." },
          "405": { "description": "Método não permitido." }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
